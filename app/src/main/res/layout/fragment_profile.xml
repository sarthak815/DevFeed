<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ADEFD1"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#A600203F">
        <TextView
            android:text="DevFeed"
            android:fontFamily="@font/dreamwood"
            android:paddingTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textAppearance="@style/devfeed_title"
            android:gravity="center_horizontal|bottom"
            />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#A600203F">

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="horizontal"
            android:background="#ADEFD1">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/profile_pic"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                tools:src="@tools:sample/avatars"
                app:civ_border="true"
                app:civ_border_color="@color/dark"
                app:civ_border_width="5dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="3dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="5"
                android:orientation="vertical">
                <androidx.slidingpanelayout.widget.SlidingPaneLayout
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    />
                <TextView
                    android:textSize="25sp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:id="@+id/name_profile"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:textAllCaps="false"
                    android:text="PlusUps"
                    android:textStyle="bold"
                    >
                <TextView
                    android:id="@+id/email"
                    android:gravity="center"
                    android:textSize="28sp"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="+6969"
                    />
                <androidx.slidingpanelayout.widget.SlidingPaneLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
                <Button
                    android:id="@+id/contact_number"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_width="180dp"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/button_border"
                    android:text="Contact"/>
            </LinearLayout>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mypost_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/linear_layout"/>
    </RelativeLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_action_name"
        android:layout_margin="10dp"/>

</RelativeLayout>